<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shopserve.dao.UserDao">

    <resultMap type="com.example.shopserve.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="role_id" column="role_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select *
        from user
        where id = #{id}
    </select>
    <!--查询单个-->
    <select id="queryByName" resultMap="UserMap">
    select *
    from `user`
    where name = #{name}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from user
    </select>
    <select id="getUserPage" resultType="com.example.shopserve.entity.User">
        select *
        from user LIMIT #{offset}, #{size}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user(name, password, email, title,role_id)
        values (#{name}, #{password}, #{email}, #{title}, #{role_id})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user(name, title, email, password,role_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.title}, #{entity.email}, #{entity.password}, #{entity.role_id})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user(name, title, email, password)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.title}, #{entity.email}, #{entity.password})
        </foreach>
        on duplicate key update
        name = values(name),
        title = values(title),
        email = values(email),
        password = values(password)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="role_id != null and role_id != ''">
                role_id = #{role_id},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from user
        where id = #{id}
    </delete>
<!--insert into user_role() values("系统管理员")-->
</mapper>

